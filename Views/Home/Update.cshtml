@using KutuphaneOtomasyonu.Models.Entity;

@model List<forumtablosu>

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h1>Güncelle</h1>


    <form action="#" method="post" class="form-group">
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">İsim:</label>
            <input type="text" class="form-control m-2" id="İsim" placeholder="İsim" name="isim" required="">
        </div>
        <div class="mb-3">
            <label for="pwd" class="form-label">Soyİsim:</label>
            <input type="text" class="form-control m-2" id="Soyİsim" placeholder="Soyİsim" name="soyisim" required="">
        </div>
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Mesaj:</label>
            <input type="text" class="form-control m-2" id="Mesaj" placeholder="Mesaj" name="mesaj" required="">
        </div>
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Tarih:</label>
            <input type="text" class="form-control m-2" id="Tarih" placeholder="Tarih" name="tarih" required="">
        </div>



        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>





</div>
